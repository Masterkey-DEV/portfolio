---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/perfilProfesional/sections/Hero.astro";
import About from "../components/perfilProfesional/sections/About.astro";
import Skills from "../components/perfilProfesional/sections/Skills.astro";
import Contact from "../components/perfilProfesional/sections/Contact.astro";
// Nota: La sección de Proyectos que creamos antes también iría aquí.
---

<Layout>
  <main class="flex flex-col gap-20 md:gap-32">
    <Hero />
    <About />
    <Skills />
    <Contact />
  </main>
</Layout>

<style>
  main {
    /* Opcional: Centra el contenido principal si el ancho es limitado */
    max-width: 100%;
    overflow-x: hidden; /* Previene desbordamiento horizontal */
  }
</style>
