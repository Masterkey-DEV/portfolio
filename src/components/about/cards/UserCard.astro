---
const { name, description } = Astro.props;
---

<header
  class="mb-16 flex items-start justify-between bg-white dark:bg-stone-900 p-4 rounded-lg transition-colors"
>
  <div class="flex items-center gap-4">
    <img
      src="/me.jpg"
      alt="Juan Moreno"
      class="h-16 w-16 rounded-full object-cover border-2 border-stone-300 dark:border-stone-600 transition-colors"
    />
    <div>
      <h1
        class="font-serif text-3xl font-normal italic text-stone-900 dark:text-white transition-colors"
      >
        {name}
      </h1>
      <p
        class="mt-1 text-sm text-stone-600 dark:text-stone-300 transition-colors"
      >
        {description}
      </p>
    </div>
  </div>
</header>
