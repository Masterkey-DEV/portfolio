---
import Social from "../Social.astro";
import { BsTwitterX } from "react-icons/bs";
import { FaSquareFacebook } from "react-icons/fa6";
import { GrLinkedin } from "react-icons/gr";
import { FaGithub } from "react-icons/fa";
import { IoMdMailUnread } from "react-icons/io";
---

<div
  class="flex flex-wrap items-center justify-center md:justify-start gap-4 px-4 sm:px-6 md:px-0 mt-4"
>
  <Social href="https://twitter.com" Logo={BsTwitterX} social="Twitter" />
  <Social
    href="https://facebook.com"
    Logo={FaSquareFacebook}
    social="Facebook"
  />
  <Social href="https://linkedin.com" Logo={GrLinkedin} social="LinkedIn" />
  <Social href="https://github.com" Logo={FaGithub} social="GitHub" />
  <Social
    href="mailto:example@email.com"
    Logo={IoMdMailUnread}
    social="Email"
  />
</div>

<style>
  div {
    transition: all 0.3s ease;
  }

  /* Efecto hover sobre Ã­conos individuales */
  div :global(a:hover svg) {
    transform: scale(1.1);
    color: #2563eb; /* Azul Tailwind */
  }

  div :global(a svg) {
    transition:
      transform 0.3s ease,
      color 0.3s ease;
    font-size: 1.75rem;
  }

  /* Dark mode */
  html.dark div :global(a:hover svg) {
    color: #60a5fa;
  }
</style>
