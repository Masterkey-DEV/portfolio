---
import ServiceCard from "../cards/ServiceCard.astro";
import { FaCode, FaCalculator, FaRobot } from "react-icons/fa";

const services = [
  {
    title: "Custom Web Application Development",
    description:
      "End-to-end development of tailored business software that simplifies operations, increases transparency, and drives growth.",
    features: [
      "Business dashboards & analytics",
      "Modular data-driven design",
      "Full-stack implementation with Supabase + Next.js",
    ],
    icon: FaCode,
    link: "/ContactMe",
  },
  {
    title: "Accounting & Financial Systems",
    description:
      "Design and build cloud-based accounting systems customized for each business model, improving accuracy and control.",
    features: [
      "Dynamic financial reporting",
      "Custom COA and journal logic",
      "RLS-secured SQL backend integration",
    ],
    icon: FaCalculator,
    link: "/ContactMe",
  },
  {
    title: "AI Integration & Workflow Automation",
    description:
      "Integrate AI models and automation workflows into everyday business processes for smarter, faster operations.",
    features: [
      "AI-driven prompt automation",
      "Report generation and summarization",
      "Notion / Google Sheets integration",
    ],
    icon: FaRobot,
    link: "/ContactMe",
  },
];
---

<section class="container mx-auto px-6 py-16 fade-in">
  <div class="text-center mb-16">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
      Services I Provide
    </h2>
    <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Tailored web solutions that help small businesses streamline operations
      and scale effectively
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
    {services.map((service) => <ServiceCard {...service} />)}
  </div>
</section>
