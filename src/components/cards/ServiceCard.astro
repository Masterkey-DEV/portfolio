---
const { title, description, features, icon: Icon, link } = Astro.props;
---

<div
  class="bg-white dark:bg-zinc-900 rounded-xl p-8 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 border border-gray-100 dark:border-zinc-800 group"
>
  <div
    class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900 rounded-lg flex items-center justify-center mb-6 group-hover:bg-indigo-200 dark:group-hover:bg-indigo-800 transition-colors"
  >
    <Icon class="w-6 h-6 text-indigo-600 dark:text-indigo-400" />
  </div>

  <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
    {title}
  </h3>

  <p class="text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
    {description}
  </p>

  <ul class="space-y-2">
    {
      features.map((feature: any) => (
        <li class="flex items-start text-sm text-gray-500 dark:text-gray-400">
          <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full mt-2 mr-3 shrink-0" />
          {feature}
        </li>
      ))
    }
  </ul>

  <a
    href={link}
    class="inline-flex items-center mt-6 text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 font-medium transition-colors group"
  >
    Get Custom Quote
    <svg
      class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 5l7 7-7 7"></path>
    </svg>
  </a>
</div>
