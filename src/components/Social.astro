---
const { href, social, Logo } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="flex items-center justify-center sm:justify-start gap-2 rounded-lg px-4 py-2 text-sm font-medium transition-all duration-300
         bg-stone-200 text-stone-800 hover:bg-stone-300 dark:bg-stone-800 dark:text-stone-200 dark:hover:bg-stone-700
         shadow-sm hover:shadow-md"
>
  <Logo class="text-xl sm:text-lg md:text-xl" />
  <span class="hidden sm:inline">{social}</span>
</a>

<style>
  a {
    min-width: 44px; /* Mejora la usabilidad táctil */
  }

  a:hover {
    transform: translateY(-2px);
  }

  /* Ajuste para pantallas muy pequeñas */
  @media (max-width: 480px) {
    a {
      padding: 0.5rem 0.75rem;
      gap: 0.5rem;
    }
  }
</style>
